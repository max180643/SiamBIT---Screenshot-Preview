{
  "manifest_version": 2,
  "name": "SiamBIT - Screenshot Preview",
  "description": "This extension use to show sceenshot image on \"file select\" page at SiamBIT",
  "version": "1.0",
  "content_scripts": [
  {
    "matches": ["https://www.siambit.me/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }
 ],
  "permissions": ["activeTab"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  }
}